@model IEnumerable<CollegeApp.Models.Cvs.TrainingCourse>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">الدورات التدريبية</strong>
        </div>
        <div class="card-body">
            <p>
                @Html.ActionLink(" اضافة", "Create", null, new { @class = CollegeApp.Resource.Resource.CreateStyle })
            </p>
            <br />
            <hr />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstitutionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainingCourseDetail)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstitutionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrainingCourseDetail)
                        </td>
                        <td>
                            @Html.ActionLink(CollegeApp.Resource.Resource.Edit, "Edit", new { id = item.TrainingCourseId }, new { @class = CollegeApp.Resource.Resource.EditStyle }) |
                            @Html.ActionLink(CollegeApp.Resource.Resource.Delete, "Delete", new { id = item.TrainingCourseId }, new { @class = CollegeApp.Resource.Resource.DeleteStyle })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>

