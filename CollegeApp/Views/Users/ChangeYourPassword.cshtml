@model CollegeApp.Models.User

@{
    ViewBag.Title = "ChangeYourPassword";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">
                تغير كلمة المرور
            </strong>
        </div>
        <div class="card-body">
            <div style="text-align:center;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()




                    <div class="form-horizontal">
                        <div class="row form-group">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col col-md-3">
                                <label for="password-input" class=" form-control-label">كلمة المرور الجديدة</label>
                            </div>
                            <div class="col-12 col-md-4">
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "كلمة المرور" } })
                                @Html.ValidationMessage("UserPassword", "", new { @class = "text-danger" })
                                <small class="help-block form-text">ادخل كلمة المرور الجديدة</small>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                            </div>
                            <div class="col-12 col-md-4">
                                <button type="submit" class="btn btn-success btn-sm col-3">
                                    <i class="fa fa-dot-circle-o"></i>
                                    <strong>حفظ</strong>
                                </button>
                            </div>
                        </div>

                    </div>
                }


            </div>
            @if (ViewBag.Msg == "Done")
            {
                <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
                    <span class="badge badge-pill badge-success">بنجاح</span>
                    تم بنحاج تغير كلمة المرور الخاصة بك
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            }

        </div>
    </div>
</div>



