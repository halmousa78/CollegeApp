@model IEnumerable<CollegeApp.Models.Cvs.Experince>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">الخبرات</strong>
        </div>
        <div class="card-body">
            <p>
                @Html.ActionLink(" اضافة", "Create", null, new { @class = CollegeApp.Resource.Resource.CreateStyle })
            </p>
            <br />
            <hr />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExperinceDetail)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperinceDetail)
                </td>
                <td>
                    
                    @Html.ActionLink(CollegeApp.Resource.Resource.Edit, "Edit", new { id = item.ExperinceId } , new { @class= CollegeApp.Resource.Resource.Edit }) |
                    @Html.ActionLink(CollegeApp.Resource.Resource.Delete, "Delete", new { id = item.ExperinceId }, new { @class = CollegeApp.Resource.Resource.DeleteStyle })
                </td>
            </tr>
}

            </table>


        </div>
    </div>
</div>

