    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>دخول النظام</title>

    <!-- Fontfaces CSS-->
    <link href="/Content/MyStyle/css/font-face.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="/Content/MyStyle/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="/Content/MyStyle/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="/Content/MyStyle/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/Content/MyStyle/css/theme.css" rel="stylesheet" media="all">
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/Content/MyStyle/images/icon/ACT_LOGO.png" alt="ACT_LOGO">
                            </a>
                        </div>
                        <div class="login-form">
                            @if (TempData["message"] != null)
                            {
                                if (TempData["message"] == "البريد الالكتروني غير مسجل" || TempData["message"] == "اسم المستخدم او كلمة المرور غير صحيحة")
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["message"]
                                    </div>
                                    
                                }
                                else
                                {
                                    <div class="alert alert-success" role="alert">
                                        @TempData["message"]
                                    </div>
                                }
                            }




                            <form action="/Account/Login" method="post">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label>اسم المستخدم</label>
                                    @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control au-input au-input--full", type = "email", name = "email", placeholder = "البريد الالكتروني", id = "email" } })
                                    @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })

                                    @*<input class="au-input au-input--full" type="email" name="email" placeholder="البريد الالكتروني" id="email">*@
                                </div>
                                <div class="form-group">

                                    <label>كلمة المرور</label>
                                    @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control au-input au-input--full", type = "password", name = "password", placeholder = "كلمة المرور", id = "password" } })
                                    @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                    @*<input class="au-input au-input--full" type="password" name="password" placeholder="كلمة المرور" id="password">*@
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        @*<input type="checkbox" name="RememberMe" id="RememberMe">*@<!--تذكر كلمة بيانات تسجيل الدخول-->
                                    </label>
                                    <label>
                                        <a href="/Account/ForgotPassword">هل نسيت كلمة المرور ؟</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit" ">الدخول</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="/Content/MyStyle/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="/Content/MyStyle/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="/Content/MyStyle/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="/Content/MyStyle/vendor/slick/slick.min.js"></script>
    <script src="/Content/MyStyle/vendor/wow/wow.min.js"></script>
    <script src="/Content/MyStyle/vendor/animsition/animsition.min.js"></script>
    <script src="/Content/MyStyle/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="/Content/MyStyle/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="/Content/MyStyle/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="/Content/MyStyle/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="/Content/MyStyle/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/Content/MyStyle/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="/Content/MyStyle/vendor/select2/select2.min.js"></script>

    <!-- Main JS-->
    <script src="/Content/MyStyle/js/main.js"></script>
