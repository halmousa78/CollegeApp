@model IEnumerable<CollegeApp.Models.ImprovementIndicator.Subject>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">خطط التحسين</strong>
        </div>
        <div class="card-body">


            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImprovementIndicatorSubject.ImprovementIndicatorSubjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectDescription)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImprovementIndicatorSubject.ImprovementIndicatorSubjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectDescription)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }) |
                            @Html.ActionLink("اضافة المبادرات", "GetImprovementIndicatorsBySubjectId", "ImprovementIndicators", new { Id = item.SubjectId }, null) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
                        </td>
                    </tr>
                }

            </table>

           
        </div>
    </div>
</div>
