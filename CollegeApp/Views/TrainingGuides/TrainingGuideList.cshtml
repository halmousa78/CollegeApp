@model IEnumerable<CollegeApp.Models.TrainingGuide.TrainingGuide>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">اسماء المتدربين (الارشاد التدريبي)</strong>
        </div>
        <div class="card-body">
            
            <table class="table table-bordered table-striped display" id="myData" style="text-align:center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Major.MajorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Term.TermName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TraineeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TraineeNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Major.MajorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Term.TermName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TraineeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TraineeNumber)
                            </td>

                            @if (item.Status == true)
                            {
                                <td style="background-color:forestgreen;color:white;text-align:center">
                                    <span>مكتمل</span>
                                </td>
                                <td></td>
                            }
                            else
                            {
                                <td style="background-color:red;color:white;text-align:center">
                                    <span>غير مكتمل</span>
                                </td>

                                <td>
                                    @Html.ActionLink(" تعديل", "Edit", new { id = item.TrainingGuideId }, new { @class = "btn btn-success fa fa-edit" })@*|
                            @Html.ActionLink("Details", "Details", new { id = item.TrainingGuideId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.TrainingGuideId })*@
                                </td>
                            }



                        </tr>
                    }
                </tbody>
            </table>   

           
        </div>
    </div>
</div>

