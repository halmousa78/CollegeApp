@model IEnumerable<CollegeApp.Models.Course>

@{
    ViewBag.Title = "Index";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
                <strong class="card-title">المقررات التدريبية</strong>
            </div>
        <div class="card-body">
            <div style="text-align:center;">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.level)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Major.MajorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prerequisites)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseStatus)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.level)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Major.MajorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prerequisites)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseStatus)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new {  id=item.CourseId , y=item.MajorId }) |
                                @Html.ActionLink("Details", "Details", new {  id=item.CourseId, y = item.MajorId }) |
                                @Html.ActionLink("Delete", "Delete", new {  id=item.CourseId, y = item.MajorId })
                            </td>
                        </tr>
                    }

                </table>


            </div>

        </div>
    </div>
</div>

